root = true

[*]
charset = utf-8
trim_trailing_whitespace = true
insert_final_newline = true
end_of_line = LF

[*.js]
indent_style = space
indent_size = 2

[*.php]
indent_style = space
indent_size = 4

[*.stub]
indent_style = space
indent_size = 4

# Use 2 spaces for the HTML files
[*.html]
indent_size = 2

[composer.json]
indent_style = space
indent_size = 4

# The JSON files contain newlines inconsistently
[*.json]
indent_size = 2
insert_final_newline = ignore

[*.md]
trim_trailing_whitespace = false
