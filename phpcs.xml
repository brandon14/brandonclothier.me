<?xml version="1.0"?>
<ruleset name="brandonclothier.me Standard" namespace="App\CS\Standard">
  <description>The phpcs coding standard for the brandonclothier.me project.</description>

  <!-- Only process .php files. -->
  <arg name="extensions" value="php" />
  <!-- Show all errors. -->
  <arg name="error-severity" value="1" />
  <!-- Hide warnings. -->
  <arg name="warning-severity" value="0" />
  <arg name="colors" />
  <arg value="sp" />

  <!-- Ignore vendor and bootstrap/cache folder. -->
  <exclude-pattern>/vendor/</exclude-pattern>
  <exclude-pattern>/bootstrap/cache</exclude-pattern>
  <!-- Excldue the database migrations and seeds folders. -->
  <exclude-pattern>/database/</exclude-pattern>
  <!-- Exclude any stored files. -->
  <exclude-pattern>/storage/</exclude-pattern>
  <!-- Exclude any blade templates. -->
  <exclude-pattern>*.blade.php</exclude-pattern>

  <rule ref="PSR2" />

</ruleset>
